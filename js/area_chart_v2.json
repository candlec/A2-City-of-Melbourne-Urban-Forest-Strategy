{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/candlec/A2-City-of-Melbourne-Urban-Forest-Strategy/refs/heads/main/data/1988-2024-Victoria-Land-Coverage-modified-no-comma.csv",
    "format": {
      "type": "csv",
      "parse": {"Total": "integer"}
    }
  },
  "vconcat": [
    {
    "width": "container",
    "height": 500,
    "mark": "area",
    "transform": [{"filter": {"param": "time_brush"}}],
    "encoding": {
      "x":{
          "field": "Year",
          "timeUnit": "year",
          "type": "nominal",
          "title": "Surface Type"
      },
      "color": {
        "field": "LandCoverClasses",
        "scale": {"range": ["#587470", "#A3F5CC", "#BF364D", "#7DB800", "#764134", "#B88F65", "#49AB8C", "#6EC4BD", "#89C9E6", "#74B4BE", "#0081A7", "#C1C3C3"]},
        "title": "Land cover Type"
      },
      "y": {
          "field": "Total",
          "type": "quantitative",
          "sort": "ascending",
          "title": "Total"
      }
    }
    },  
    {
      "width": "container",
      "height": 250,
      "mark": "line",
      "title": "Year Filter",
      "params": [
        {
        "name": "time_brush",
        "select": {"type": "interval", "encodings": ["x"]}
        }
      ],
        "encoding": {
          "x": {
            "field": "Year",
            "timeUnit": "year",
            "title": ""
        },
        "y": {
          "field": "Total",
          "type": "quantitative",
          "title": "Total"
        },
        "color": {
        "field": "LandCoverClasses",
        "scale": {"range": ["#587470", "#A3F5CC", "#BF364D", "#7DB800", "#764134", "#B88F65", "#49AB8C", "#6EC4BD", "#89C9E6", "#74B4BE", "#0081A7", "#C1C3C3"]},
        "title": ""
      }
     }
    }
  ]
}